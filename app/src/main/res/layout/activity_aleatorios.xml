<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="69dp"
        android:text="Generador de aleatorios"
        android:textAlignment="center"
        android:textSize="35sp"
        android:visibility="visible"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="645dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="82dp"
            android:orientation="vertical">

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:id="@+id/grupoRadios">

                <RadioButton
                    android:id="@+id/radioSin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sin rango específico"
                    android:textSize="18sp" />

                <RadioButton
                    android:id="@+id/radioCon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Con rango específico"
                    android:textSize="18sp" />

            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <EditText
                android:id="@+id/editMinimo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_weight="0.25"
                android:inputType="number"
                android:hint="mínimo"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/editMaximo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_weight="0.25"
                android:inputType="number"
                android:hint="máximo"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="67dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <CheckBox
                android:id="@+id/checkBoxDecimales"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_weight="0.5"
                android:text="Permitir decimales"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/editNumeroDecimales"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:layout_weight="0.5"
                android:inputType="number"
                android:hint="número de decimales"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_weight="0.6"
                android:text="¿Cuántos quieres generar?"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/editNumeroTotales"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:layout_weight="0.4"
                android:inputType="number"
                android:hint="número de totales"
                android:textSize="17sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <Switch
                android:id="@+id/switchRepetirNumeros"
                style="@style/switchAdv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_weight="0.6"
                android:checked="false"
                android:text="Repetir números"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageButton
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="19dp"
                android:src="@drawable/startup"
                android:id="@+id/botonCohete"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="225dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/TexViewNumeros"
                android:layout_width="match_parent"
                android:layout_height="223dp"
                android:gravity="center_horizontal"
                android:text="0"
                android:textSize="50sp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>